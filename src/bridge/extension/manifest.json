{
    "manifest_version": 3,
    "name": "CrewAI Stealth Bridge",
    "version": "1.0",
    "description": "Bridge for CrewAI MCP Server to control the browser.",
    "permissions": [
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_title": "CrewAI Bridge Connected"
    }
}